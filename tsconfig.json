{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/layout/*": ["./src/components/layout/*"],
      "@/explorer/*": ["./src/components/explorer/*"],
      "@/search/*": ["./src/components/search/*"],
      "@/tree/*": ["./src/components/explorer/components/views/tree/*"],
      "@/grid/*": ["./src/components/explorer/components/views/grid/*"],
      "@/data/*": ["./src/components/data/*"],
      "@/dataset/*": ["./src/components/dataset/*"],
      "@/editor/*": ["./src/components/editor/*"],
      "@/tabs/*": ["./src/components/editor/components/tabs/*"],
      "@/ui/*": ["./src/components/ui/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
